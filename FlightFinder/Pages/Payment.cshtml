@page
@model FlightFinder.Pages.PaymentModel
@{
    ViewData["Title"] = "Payment Info";
}

<head>
    <title>Payment Form</title>
    <link rel="stylesheet" type="text/css" href="~/css/payment.css">
</head>
<body>
    <div class="text-center">
        <h2>Payment Info</h2><br>
        <div class="payment">
            <form id="payment" method="post" action="">

                <label>
                    <b>
                        Card Holder Name
                    </b>
                </label>
                <br>
                <input type="text" asp-for="Card_Name" placeholder="Name" />

                <br><br>

                <label>
                    <b>
                        Card Number
                    </b>
                </label>
                <br>
                <input type="text" asp-for="Card_Number" placeholder="Card Number" maxlength="16">

                <br><br>

                <label>
                    <b>
                        Expiration Date
                    </b>
                </label>
                <br>
                <input type="month" asp-for="Expir_Month" placeholder="Expiration Date">

                <br><br>

                <label>
                    <b>
                        CVV Number
                    </b>
                </label>
                <br>
                <input type="text" asp-for="CVV_Number" placeholder="CVV Number" maxlength="3">

                <br><br>
                <div class="">
                    <input type="submit" value="Submit" class="btn btn-primary form-control" />
                </div>
                <br>
                <label style="color:red">@Html.DisplayFor(m => m.ErrorText)</label>

            </form>
        </div>
    </div>
</body>