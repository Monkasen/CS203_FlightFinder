@page
@model FlightFinder.Pages.RegistrationModel
@{
    ViewData["Title"] = "Registration";
}

<head>
    <title>Registration Form</title>
    <link rel="stylesheet" type="text/css" href="~/css/registration.css">
</head>
<body>
    <div class="text-center">
        <h2>Create Account</h2><br>
        <div class="login">
            <form id="create-account" method="post" action="">

                <label>
                    <b>
                        Email
                    </b>
                </label>
                <input type="email" asp-for="User_Email" placeholder="Email" />

                <br><br>

                <label>
                    <b>
                        Username
                    </b>
                </label>
                <input type="text" asp-for="Username" placeholder="Username">

                <br><br>

                <label>
                    <b>
                        Password 
                    </b>
                </label>
                <input type="password" asp-for="Password" placeholder="Password">

                <br><br>

                <label>
                    <b>
                        First Name (Optional)
                    </b>
                </label>
                <input type="text" asp-for="First_Name" placeholder="First Name">

                <br><br>

                <label>
                    <b>
                        Last Name (Optional)
                    </b>
                </label>
                <input type="text" asp-for="Last_Name" placeholder="Last Name">

                <br><br>

                <div class="">
                    <input type="submit" value="Sign Up" class="btn btn-primary form-control" />
                </div>

                <br><br>
                <br><br>
                <a href="">Forgot Password</a>
            </form>
        </div>
    </div>
</body>