@page
@model FlightFinder.Pages.ConfirmBookModel
@{
    ViewData["Title"] = "Confirm Booking";
}

Seats Reserved: @Html.DisplayFor(m => m.Seats_Reserved)
<br>
Card Used: @Html.DisplayFor(m => m.LastFour_Card)

<body>
    <a class="nav-item">
        <div class="text-center">
            <b style="font-size:30px">You are reserving seats for the following flight:</b> <!--Display current user logged in-->
        </div>
        <br />
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Departure City</th>
                    <th scope="col">Arrival City</th>
                    <th scope="col">Flight Date</th>
                    <th scope="col">Departure Time</th>
                    <th scope="col">Arrival Time</th>
                    <th scope="col">Estimated Flight Time</th>
                    <th scope="col">Registration Number</th>
                    <th scope="col">Aircraft Type</th>
                    <th scope="col">Flight Distance</th>
                    <th scope="col">Total Seats</th>
                    <th scope="col">Open Seats</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@Html.DisplayFor(m => BookModel.Flight_ID[0])</th>
                    <td>@Html.DisplayFor(m => BookModel.Departure_City[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Arrival_City[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Flight_Date[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Departure_Time[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Arrival_Time[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.E_Flight_Time[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Aircraft_Reg_Num[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Aircraft_Type[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Flight_Distance[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Total_Seats[0])</td>
                    <td>@Html.DisplayFor(m => BookModel.Open_Seats[0])</td>
                </tr>

            </tbody>
        </table>
    </a>

    <br />

    <a class="btn btn-danger" href="javascript:history.back()">Go Back</a>

    <form id="confirm" method="post">
        <div>
            <button class="btn btn-success" name="submit" type="submit" value="B">Book Flight</button>
        </div>
    </form>
</body>